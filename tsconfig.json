{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["ES2019"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2019"
    },
    "exclude": ["node_modules"],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "examples/**/*.ts",
        "examples/**/*.tsx"
    ]
}
